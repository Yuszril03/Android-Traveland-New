<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="0dp" />
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <stroke
                android:width="6dp"
                android:color="#177879E8" />


        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/gray_btn_bg_color"/>
            <stroke
                android:width="2dp"
                android:color="@color/gray_btn_bg_color" />
        </shape>
    </item>

</layer-list>