<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <solid android:color="@null"/>
            <corners android:topLeftRadius="30dp" android:bottomLeftRadius="30dp" />
            <padding
                android:bottom="2dp"
                />

            <stroke
                android:width="6dp"
                android:color="#007879E8" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@null"/>
            <corners android:bottomLeftRadius="30dp" android:topLeftRadius="30dp" />
            <padding
                android:bottom="2dp"
                 />

            <stroke
                android:width="6dp"
                android:color="#177879E8" />


        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <corners android:topLeftRadius="30dp" android:bottomLeftRadius="30dp" />
            <stroke
                android:width="2dp"
                android:color="#0D263238" />
        </shape>
    </item>

</layer-list>
