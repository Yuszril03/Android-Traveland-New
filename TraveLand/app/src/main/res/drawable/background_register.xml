<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners android:topLeftRadius="320dp"  />
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <stroke
                android:width="6dp"
                android:color="@color/primary" />

        </shape>
    </item>

    <item>
        <shape>
            <corners android:topLeftRadius="320dp"  />
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <stroke
                android:width="6dp"
                android:color="@color/primary" />


        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <corners android:topLeftRadius="320dp" />
            <gradient android:startColor="@color/primary" android:endColor="#FFC71F" android:angle="90"/>
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
        </shape>
    </item>

</layer-list>
