<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <solid android:color="@null"/>
            <corners android:radius="15dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <stroke
                android:width="7dp"
                android:color="#007879E8" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@null"/>
            <corners android:radius="15dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <stroke
                android:width="5dp"
                android:color="#177879E8" />


        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@null"/>
            <corners android:radius="15dp" />
