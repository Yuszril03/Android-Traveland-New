                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <stroke
                android:width="3dp"
                android:color="#17A3A3E1" />


        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/darkMode"/>
            <corners android:radius="15dp" />
            <stroke
                android:width="2dp"
                android:color="#0D263238" />
        </shape>
    </item>

</layer-list>
