        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.TraveLand.light"
        tools:targetApi="31">
        <activity
            android:name=".DetailWisata"
